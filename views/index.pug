extends ./layouts/layout

block content
  include widgets/cityList

  div(class='section')
    div(class='columns is-multiline')
      each animal in animals
        div(class='column is-one-third')
          div(class='card')
            div(class='card-image')
              figure(class='image is-5by4')
                a(href=`/info/${animal.animal_id}`)
                  img(src= animal.album_file)
            div(class='card-content')
              div(class='content')
                div(class='tags')
                  span(class='tag')= cityList[animal.animal_area_pkid]
                  span(class='tag')= animal.animal_kind
