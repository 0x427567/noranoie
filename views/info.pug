extends ./layouts/layout

block content
  include widgets/cityList
  include widgets/bodySize

  - let gender = (animal.animal_sex === 'M') ? '公' : '母'

  div(class='section')
    nav(class='breadcrumb' aria-label='breadcrumbs')
      ul
        li
          a(href='/') 野良の家
    div(class='container')
      table(class='table is-fullwidth')
        tbody
          tr
            th 照片
            td
              img(src= animal.album_file)
          tr
            th 城市
            td= cityList[animal.animal_area_pkid]
          tr
            th 種類
            td= animal.animal_kind
          tr
            th 性別
            td= gender
          tr
            th 年紀
            td= animal.animal_age
          tr
            th 毛色
            td= animal.animal_colour
          tr
            th 體型
            td= bodySize[animal.animal_bodytype]
          tr
            th(scope='row') 絕育
            td= (animal.animal_sterilization === 'F') ? '否' : '是'
          tr
            th(scope='row') 狂犬病疫苗
            td= td= (animal.animal_bacterin === 'F') ? '否' : '是'
          tr
            th(scope='row') 發現地點
            td= animal.animal_foundplace
          tr
            th(scope='row') 備註
            td= animal.animal_remark
          tr
            th(scope='row') 所屬收容所
            td= animal.shelter_name
          tr
            th(scope='row') 收容所地址
            td= animal.shelter_address
          tr
            th(scope='row') 收容所電話
            td= animal.shelter_tel
